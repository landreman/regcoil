mn_max = len(xm_potential)
phi_sin = phi_mn[0:mn_max]
phi_cos = phi_mn[mn_max:]

####### define fucntion #######
def func(x):
    '''
    x = [theta,zeta]
    '''
    angle = xm_potential*x[0] - xn_potential*x[1]
    phi = np.sum(phi_cos * np.cos(angle) + phi_sin * np.sin(angle))
    return phi

def func2(x):
    '''
    square of phi
    '''
    return func(x)*func(x)

