	print "number of raw contour lines: ", len(lines)
	new_lines = combine_lines(lines)
	print "number of closed contour lines: ", len(new_lines)
   #fig = plt.figure()
	for icoil in new_lines:
   #print "cdata.collections:", len(cdata.collections)
